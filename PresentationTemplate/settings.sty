%%%% Настройка расположения и вида элементов на титульном листе %%%%
\makeatletter
\defbeamertemplate*{title page}{mydefault}[1][]
{
  \vbox{}
    \vspace*{-3ex}
    \begin{beamercolorbox}[wd=\paperwidth,sep=8pt,left,#1]{institute}
    \hfill
        \begin{minipage}[t]{0.1\textwidth}
            {\usebeamercolor[fg]{titlegraphic}\raisebox{-.1\height}{\inserttitlegraphic}}
        \end{minipage}
        \hfill
        \begin{minipage}[t]{0.8\textwidth}
            \vspace{2mm}
            \begin{center}{\usebeamerfont{institute}\insertinstitute}\end{center}
        \end{minipage}
     \hfill
    \end{beamercolorbox}
  \vfill
  \vskip3em\par
  \begin{centering}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{author}
      \insertauthor
    \end{beamercolorbox}
  \end{centering}
\vspace{5ex}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}
}
\makeatother


